{
    "name": "tlang",
    "version": "1.0.0",
    "description": "A toy compiler written in typescript",
    "type": "module",
    "scripts": {
        "start": "node --es-module-specifier-resolution=node dist/index.js",
        "dev": "nodemon --es-module-specifier-resolution=node dist/index.js",
        "watch": "tsc --watch",
        "build": "tsc",
        "pretty": "prettier --write src",
        "lint:fix": "eslint src --fix",
        "test": "jest --detectOpenHandles",
        "prepare": "husky install",
        "cli": "node --es-module-specifier-resolution=node dist/cli/cli.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/saoodahmad/TLang.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/saoodahmad/TLang/issues"
    },
    "homepage": "https://github.com/saoodahmad/TLang#readme",
    "dependencies": {
        "chalk": "^5.2.0",
        "pkg": "^5.8.0"
    },
    "devDependencies": {
        "@types/jest": "^29.2.5",
        "@types/node": "^18.11.18",
        "@typescript-eslint/eslint-plugin": "^5.48.0",
        "@typescript-eslint/parser": "^5.48.0",
        "eslint": "^8.31.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-config-standard-with-typescript": "^26.0.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jest": "^27.2.0",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.0",
        "jest": "^29.3.1",
        "nodemon": "^2.0.20",
        "prettier": "^2.8.1",
        "ts-jest": "^29.0.3",
        "typescript": "^4.9.4",
        "lint-staged": "^13.1.0",
        "ts-node": "^10.9.1"
    },
    "lint-staged": {
        "src/**/*.ts": "eslint --fix"
    }
}
